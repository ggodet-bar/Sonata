<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="Build Jar file for the Sonata framework" default="main" >
	<property name="version" value="0.7" />
	
	<target name="main" depends="buildJar" />

	<target name="buildJar" description="Compression into a plugin">
		<tstamp />
		<jar jarfile="../output/org.sonata.framework_${version}.v${DSTAMP}.jar" basedir=".">
			<manifest>
				<attribute name="Class-Path" value="lib/jdom.jar" />
			</manifest>
		</jar>
		<eclipse.refreshLocal resource="Sonata/output" depth="infinite"/>
	</target>
</project>